<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="background" onKeyPressed="#keyPressed" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <ImageView fx:id="logoImage" fitHeight="150.0" fitWidth="200.0" layoutX="88.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true" />
      <TextField fx:id="username" layoutX="60.0" layoutY="214.0" prefHeight="26.0" prefWidth="180.0" promptText="Username" />
      <PasswordField fx:id="password" layoutX="60.0" layoutY="263.0" prefHeight="26.0" prefWidth="180.0" promptText="Password" />
      <Label fx:id="status" contentDisplay="CENTER" layoutX="60.0" layoutY="361.0" prefHeight="15.0" prefWidth="180.0" textAlignment="CENTER">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <Button id="button" fx:id="loginButton" layoutX="60.0" layoutY="315.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="26.0" prefWidth="180.0" text="Log in" />
   </children>
</Pane>
